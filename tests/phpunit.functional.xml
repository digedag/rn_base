<?xml version="1.0" encoding="UTF-8"?>
<phpunit 
  backupGlobals="false"
  bootstrap="../.Build/vendor/typo3/testing-framework/Resources/Core/Build/FunctionalTestsBootstrap.php"
  processIsolation="false"
  stopOnError="false"
  stopOnFailure="false"
  stopOnIncomplete="false"
  stopOnSkipped="false"
  verbose="true"
>

  <testsuites>
    <testsuite name="RnBase functional tests">
      <directory suffix="Test.php">./Classes/</directory>
    </testsuite>
  </testsuites>
  <groups>
    <include>
      <group>functional</group>
    </include>
  </groups>
  <php>
    <env name="typo3DatabaseDriver" value="pdo_sqlite"/>
    <env name="typo3DatabaseName" value=":memory:"/>
    <env name="typo3DatabaseHost" value="localhost"/>
    <env name="typo3DatabaseUsername" value="dummy"/>
    <env name="typo3DatabasePassword" value=""/>
  </php>
</phpunit>
